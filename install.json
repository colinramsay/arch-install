{
    "audio": "pipewire",
    "bootloader": "grub-install",
    "custom-commands": [
        "git clone https://aur.archlinux.org/yay.git && cd yay && makepkg -si",
        "yay ttf-unifont && yay nerd-fonts-overpass siji-ng && yay ttf-malayalam-font-dyuthi",
        "usermod -aG autologin",
        "yadm clone https://github.com/colinramsay/dotfiles.git"
    ],
    "!encryption-password": "",
    "filesystem": "ext4",
    "hostname": "archduke",
    "kernels": [
        "linux"
    ],
    "harddrive": {
        "path": "/dev/nvme0n1"
    },
    "keyboard-language": "gb",
    "mirror-region": "Worldwide",
    "nic": {
        "NetworkManager": true
    },
    "ntp": true,
    "packages": [
        "base-devel", "git", "wget", "zsh", "signal-desktop", "firefox", "vscode", "dbeaver", "gnome-terminal", "feh",
        "xclip", "maim",
        "xorg", "xorg-xinit", "xterm", "i3-gaps", "rofi", "yadm", "dunst", "picom", "polybar", "lightdm",
        "remmina", "remmina-plugin-desktop",
        "thunar", "thunar-volman", "thunar-archive-plugin", "thunar-shares-plugin"
    ],
    "superusers": {
        "colinramsay": {
            "!password": ""
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_GB",
    "timezone": "Europe/London",
    "users": {
 
    }
}
